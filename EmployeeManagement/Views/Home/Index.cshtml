@model IEnumerable<Employee>

@{ 
    ViewBag.Title = "Employee List";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Department</td>
                <td><a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary">View</a></td>
            </tr>
        }
    </tbody>
</table>

